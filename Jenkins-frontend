pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {

    stage('Build') {
      steps {
        dir("frontend") {
            sh 'npm install -g yarn'
            sh 'yarn install'
            sh 'yarn build'
        }  
      }
    }
    
    stage('Start') {
      steps {
        dir("frontend") {
            sh 'yarn run start-prod'
        }  
      }
    }

  }
}
