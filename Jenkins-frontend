pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {

    stage('Build') {
      steps {
        dir("frontend") {
            sh 'npm install --save core-js@^3'
            sh 'npm install'
            sh 'npm run build'
        }  
      }
    }
    
    stage('Start') {
      steps {
        dir("frontend") {
            sh 'npm run start-prod'
        }  
      }
    }

  }
}
