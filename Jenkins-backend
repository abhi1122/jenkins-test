pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {

    stage('Build') {
      steps {
        dir("backend") {
            sh "pwd"
            sh 'npm install nodemon -g'
            sh 'npm install'
        }  
      }
    }
    
    stage('Start') {
      steps {
        dir("backend") {
            sh "pwd"
            sh 'nodemon'
        }  
      }
    }

  }
}
