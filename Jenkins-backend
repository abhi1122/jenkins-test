pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {
  
    stage('Build') {
      steps {
        dir("backend") {
            sh 'npm install'
        }  
      }
    }
    
    stage('Run') {
      steps {
        dir("backend") {
            sh "export BUILD_ID=$BUILD_ID"
            sh "BUILD_ID=dontKillMe pm2 start ./bin/www"
        }  
      }
    }

  }
}
