pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {

    stage('Build') {
      steps {
        dir("backend") {
            sh "pwd"
            sh 'npm install forever -g'
            sh 'npm install'
        }  
      }
    }
    
    stage('Start') {
      steps {
        dir("backend") {
            sh "pwd"
            sh "forever stop ./bin/www"
            sh 'BUILD_ID=dontKillMe forever -a -l myforever.log ./bin/www &'
        }  
      }
    }

  }
}
