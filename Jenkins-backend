pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {
  
    stage('Build') {
      steps {
        dir("backend") {
            sh 'npm install'
        }  
      }
    }
    
    stage('Run') {
      steps {
        dir("backend") {
            sh "export BUILD_ID=dontKillMePlease"
            sh "pm2 start ./bin/www --name 'application_backend'"
            sh 'pm2 list'
            sh 'pm2 status'
            sh 'pm2 restart all'
        }  
      }
    }

  }
}
