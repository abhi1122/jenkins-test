pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {

    stage('Build') {
      steps {
        dir("frontend") {
            bat 'npm install env-cmd -g'
            bat 'npm build'
            bat 'npm install'
        }  
      }
    }
    
    stage('Start') {
      steps {
        dir("frontend") {
            bat 'npm run start-prod'
        }  
      }
    }

  }
}
