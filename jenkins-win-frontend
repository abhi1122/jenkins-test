pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {

    stage('Build') {
      steps {
        dir("frontend") {
            bat 'npm install'
            bat 'npm run build'
        }  
      }
    }
    
    stage('Start') {
      steps {
        dir("frontend") {
            bat 'set PORT=3008 env-cmd -f .env.prod react-scripts start'
        }  
      }
    }

  }
}
