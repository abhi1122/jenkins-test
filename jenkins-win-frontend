pipeline {
  agent any
  tools {nodejs "nodejs"}  
  stages {

    stage('Build') {
      steps {
        dir("frontend") {
            bat 'yarn add env-cmd -g'
            bat 'yarn'
            bat 'yarn build'
        }  
      }
    }
    
    stage('Start') {
      steps {
        dir("frontend") {
            bat 'yarn run start-prod'
        }  
      }
    }

  }
}
